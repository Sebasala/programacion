---
const { eyebrow, shortTitle, below } = Astro.props;
---

<div>
  <h1>
    <span class="eyebrow">{eyebrow}</span>
    {shortTitle}:
    <span class="below">{below}</span>
  </h1>
</div>
<style>
  h1 {
		text-align: center;
		margin-bottom: 5rem;
	}
  .eyebrow,
	.below {
		display: block;
		color: gray;
	}
	.eyebrow {
		font-size: 2rem;
	}
	.below {
		font-size: 1rem;
	}
</style>