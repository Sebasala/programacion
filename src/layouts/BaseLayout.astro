---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

const {
	author,
	blogPath,
	description,
	headerText,
	image,
	pubDate,
	title,
	withHeader,
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-KZ0JGBWSRT"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-KZ0JGBWSRT");
		</script>
		<BaseHead
			author={author}
			description={description}
			image={image}
			pubDate={pubDate}
			title={title}
		/>
	</head>
	<body>
		{withHeader && <Header text={headerText} path={blogPath ? blogPath : ""} />}
		<slot />
		<Footer />
	</body>
</html>
